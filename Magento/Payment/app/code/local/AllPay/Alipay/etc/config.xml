<?xml version="1.0" encoding="utf-8" ?>
<config>
    <modules>
        <AllPay_Alipay>
            <!-- declare module's version information for database updates -->
            <version>1.2.0321</version>
        </AllPay_Alipay>
    </modules>

    <global>
        <helpers>
            <alipay>
                <class>AllPay_Alipay_Helper</class>
            </alipay>
        </helpers>
        <blocks>
            <alipay>
                <class>AllPay_Alipay_Block</class>
            </alipay>
        </blocks>

        <!-- declare model group for new module -->
        <models>
            <alipay>
                <class>AllPay_Alipay_Model</class>
            </alipay>
        </models>

        <!-- declare resource setup for new module -->
        <resources>
            <alipay_setup>
                <setup>
                    <module>AllPay_Alipay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </alipay_setup>
            <alipay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </alipay_write>
            <alipay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </alipay_read>
        </resources>
    </global>
  
    <adminhtml>
        <translate>
            <modules>
                <AllPay_Alipay>
                    <files>
                        <default>AllPay_Modules.csv</default>
                    </files>
                </AllPay_Alipay>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <routers>
            <alipay>
                <use>standard</use>
                <args>
                    <module>AllPay_Alipay</module>
                    <frontName>alipay</frontName>
                </args>
            </alipay>
        </routers>
        <layout>
            <updates>
                <alipay>
                    <file>allpay.xml</file>
                </alipay>
            </updates>
        </layout>
        <translate>
            <modules>
                <AllPay_Alipay>
                    <files>
                        <default>AllPay_Modules.csv</default>
                    </files>
                </AllPay_Alipay>
            </modules>
        </translate>
    </frontend>

